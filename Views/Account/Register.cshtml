@{
    ViewData["Title"] = "註冊新帳號";
}
<div class="login-page" style="background-color:#fff6f8; display:flex; justify-content:center; align-items:center; min-height:80vh;">
    <div class="login-box" style="background:#fff;padding:2rem;border-radius:15px;box-shadow:0 4px 15px rgba(0,0,0,0.1);width:350px;text-align:center;">
        <h2 style="color:#e56b8c;">註冊新帳號</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <input type="text" name="UID" placeholder="帳號 (至少4位)" required />
            <input type="password" name="password" placeholder="密碼 (至少8位)" required />
            <button type="submit" style="width:100%;padding:10px;margin-top:1rem;background:#e56b8c;border:none;border-radius:8px;font-size:1rem;font-weight:bold;color:#fff;">註冊</button>
        </form>
        <div class="links mt-2">
            <a asp-controller="Account" asp-action="Login" style="color:#e56b8c;text-decoration:none;">返回登入</a>
        </div>
    </div>
</div>
